<% include ../partials/header %>
<div class="container">
  <div class="row">  
            <h1 style="text-align:center">Add new Campground</h1>  
        <div style="width:30%; margin:0 auto;">  
            <form action="/campground" method="post">
               <div class="form-group">      
                    <input class="form-control" type="text" name="name" placeholder="Name of Camp">
                </div>
               
               <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Image for camp">   
               </div> 
               
               <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="Desciption for camp">   
               </div> 
                  
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>    
                </div>
                
            </form>
        </div>
    <a href="/campground">Go Back</a>    
 </div>
</div>

